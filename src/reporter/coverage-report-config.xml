<?xml version="1.0" encoding="UTF-8"?>
<configuration edition="HE" xmlns="http://saxon.sf.net/ns/configuration">

	<!-- linkedTree model fixes #1920 with Saxon 12.4; revisit when all supported
		Saxon versions have the fix for https://saxonica.plan.io/issues/6405 -->
	<global lineNumbering="true" treeModel="linkedTree" />

	<resources>
		<extensionFunction>io.xspec.xspec.saxon.funcdefs.ColumnNumber</extensionFunction>
		<extensionFunction>io.xspec.xspec.saxon.funcdefs.LineNumber</extensionFunction>
	</resources>

</configuration>
